@using Abogado.Application.CasesServices.GetByCaseId
@model GetByCaseIdDTO

@using (Html.BeginForm("Edit", "Cases"))
{
    <form>
        <div class="row mb-4">
            <div class="col">
                <div class="form-outline">
                    <label class="form-label" for="form6Example1">Nombre</label>
                    <input type="text" id="form6Example1" name="Name" value="@Model.CaseName" class="form-control" required />
                </div>
            </div>
            <div class="col">
                <div class="form-outline">
                    <label class="form-label" for="form6Example2">Descripción</label>
                    <textarea class="form-control" value="@Model.Description" id="exampleFormControlTextarea1" rows="3" required></textarea>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-sm-6">
                <label for="exampleFormControlFile1">Archivo de Caso</label>
                <input type="file" class="form-control-file" id="exampleFormControlFile1">
            </div>
            <button type="submit" class="btn btn-primary  mb-4 col-12 ">Editar</button>
        </div>
    </form>
}
